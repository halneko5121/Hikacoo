<div class="d-sm-flex flex-row">
  <% if trend_words == nil %>
    <% return %>
  <% end %>
  <% trend_words.each do |trend_word| %>
    <div class="mt-2 mb-2">
      <%= form_with(url: root_url, local: true) do |f| %>
        <%= f.submit trend_word, class: "mr-4 btn btn-success" %>
      <% end %>
    </div>
  <% end %>
</div>