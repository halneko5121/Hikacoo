<% if items.empty? %>
  <p>該当する商品は見つかりませんでした。</p>
  <p>キーワードを変えてお試し下さい。</p>
  <% if scope_name == "amazon" %>
    <p><a href="https://www.amazon.co.jp/" target="_blank">Amazonで検索 <i class="fas fa-external-link-alt"></i></a></p>
  <% elsif scope_name == "rakuten" %>
    <p><a href="https://www.rakuten.co.jp/" target="_blank">楽天市場で検索 <i class="fas fa-external-link-alt"></i></a></p>
    <p><a href="https://books.rakuten.co.jp/" target="_blank">楽天ブックスで検索 <i class="fas fa-external-link-alt"></i></a></p>
  <% end %>
<% else %>
  <% items.each do |item| %>
    <div class="container mt-4 mb-6 box">
      <div class="row fix-height">
        <aside class="col-sm-4">
          <img class="rounded d-flex align-items-center" src="<%= item[:image_url] %>" alt="">
        </aside>
        <div class="col-sm-8 parent">
          <p><%= item[:name] %></p>
          <p>発売日 : <%= item[:sales_date] %></p>
          <p><font color="red"><%= item[:price] %>（税込）</font></p>
          <div class="col-sm-12 children-bottom">
            <%= form_with(url: comparison_path, scope: scope_name, local: true) do |f| %>
              <%= f.hidden_field :name, :value => item[:name] %>
              <%= f.submit '商品比較', class: "col-sm-11 btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>    
<% end %>