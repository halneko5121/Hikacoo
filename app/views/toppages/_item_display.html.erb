<% if items.empty? %>
  <p>該当する商品は見つかりませんでした。<br>キーワードを変えてお試し下さい。</p>
<% else %>
  <% items.each do |item| %>
    <div class="row">
      <aside class="col-sm-4">
        <img class="rounded img-fluid" src="<%= item[:image_url] %>" alt="">
      </aside>
      <div class="col-sm-8">
        <p><%= item[:name] %></p>
        <p>発売日 : <%= item[:sales_date] %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 center-block">
        <p><font size="6" color="red"><%= item[:price] %>（税込）</font></p>
        <p><a href="<%= item[:shop_url] %>" class="btn btn-primary">ショップで確認</a></p>
      </div>
    </div>
  <% end %>    
<% end %>
